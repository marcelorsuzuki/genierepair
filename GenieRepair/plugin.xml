<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="Menu" name="Menu" schema="schema/Menu.exsd"/>
   <!--
   	togle junit listening extension point
   -->
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
         <command
               commandId="genierepair.handlers.ToggleJUnitListening"
               label="Toogle Automatic Code Repair"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="genierepair.handlers.ToggleJUnitListening"
            id="genierepair.handlers.ToggleJUnitListening"
            name="Convert">
      </command>
   </extension>
   <!--
   	startup point
   -->
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="genierepair.Activator">
      </startup>
   </extension>
   	<!--
   	remove slice point
   	removeable
   -->
   <!--
   	genieRepair view
   -->
   <extension
         point="org.eclipse.ui.views">
      <category
            id="GenieRepair"
            name="GenieRepair">
      </category>
      <view
            category="GenieRepair"
            class="genierepair.views.GenieRepairView"
            icon="icons/16x16/tool.ico"
            id="genierepair.views.GenieRepairView"
            name="GenieRepair">
      </view>
      <view
            category="GenieRepair"
            class="genierepair.views.CodeView"
            icon="icons/16x16/java-icon.png"
            id="genierepair.views.CodeView"
            name="Code View">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               id="genierepair.views.GenieRepairView"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.ProblemView">
         </view>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               id="genierepair.views.CodeView"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.ProblemView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.equinox.preferences.preferences">
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="genierepair.preferences.GenieRepairPreferences"
            id="genierepair.preferences.GenieRepairPreferences"
            name="GenieRepair">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="genierepair.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   	
</plugin>
